{
  "name": "webshot",
  "version": "0.0.1",
  "main": "app.js",
  "author": "Ionut Milica",
  "license": "MIT",
  "engines": {
    "node": ">=8.8.1"
  },
  "scripts": {
    "start": "npm run build && npm run watch",
    "build": "npm run build-ts && npm run tslint",
    "serve": "nodemon dist/app.js",
    "watch": "concurrently -k -p \"[{name}]\" -n \"TypeScript,Node\" -c \"cyan.bold,green.bold\" \"npm run watch-ts\" \"npm run serve\"",
    "test": "jest --forceExit",
    "build-ts": "tsc",
    "watch-ts": "tsc -w",
    "tslint": "tslint -c tslint.json -p tsconfig.json",
    "debug": "npm run build && npm run watch-debug",
    "serve-debug": "nodemon --inspect dist/server.js",
    "watch-debug": "concurrently -k -p \"[{name}]\" -n \"TypeScript,Node\" -c \"yellow.bold,green.bold\" \"npm run watch-ts\" \"npm run serve-debug\"",
    "prettier": "prettier --write --semi --single-quote --trailing-comma=all 'src/**/*.ts'"
  },
  "dependencies": {
    "aws-sdk": "^2.119.0",
    "body-parser": "^1.18.1",
    "dotenv": "^4.0.0",
    "express": "^4.15.4",
    "express-promise-router": "^2.0.0",
    "morgan": "^1.8.2",
    "puppeteer": "^0.11.*",
    "uuid": "^3.1.0"
  },
  "devDependencies": {
    "@types/body-parser": "^1.16.5",
    "@types/dotenv": "^4.0.1",
    "@types/express": "^4.0.37",
    "@types/jest": "^21.1.0",
    "@types/morgan": "^1.7.33",
    "@types/uuid": "^3.4.2",
    "concurrently": "^3.5.0",
    "jest": "^21.1.0",
    "nodemon": "^1.12.1",
    "prettier": "^1.7.0",
    "ts-jest": "^21.0.1",
    "tslint": "^5.7.0",
    "typescript": "^2.5.2"
  },
  "jest": {
    "globals": {
      "ts-jest": {
        "tsConfigFile": "tsconfig.json"
      }
    },
    "moduleFileExtensions": [
      "ts",
      "js"
    ],
    "transform": {
      "^.+\\.(ts|tsx)$": "./node_modules/ts-jest/preprocessor.js"
    },
    "testRegex": "(/__tests__/.*|\\.(test|spec))\\.(ts|js)$",
    "testEnvironment": "node"
  }
}
